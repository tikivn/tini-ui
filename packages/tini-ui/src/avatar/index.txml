<view class="tu-avatar tu-avatar-{{shape}}" style="background-color: {{color}};{{style}}">
  <image
    tiki:if="{{!shortName}}"
    class="tu-avatar-img"
    src="{{src}}" lazy-load="{{lazyLoad}}"
    onLoad="_onLoad"
    onError="_onError"/>
  <view 
    class="tu-avatar-name" 
    tiki:if="{{shortName}}">
    <text style="font-size: {{size * 0.45}}px;">
      {{shortName}}
    </text>
  </view>
</view>
