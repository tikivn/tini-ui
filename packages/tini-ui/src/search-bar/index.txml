
<textfield 
  className="tu-search-bar {{className}}"
  style="{{style}}"
  shape="{{shape}}"
  
  value="{{!loading?__value:''}}"
  maxlength="{{maxlength}}" 
  errorMsg="{{errorMsg}}"
  
  placeholder="{{!loading?placeholder:''}}"
  placeholderClass="{{placeholderClass}}" 
  placeholderStyle="{{placeholderStyle}}" 

  labelText="{{labelText}}"
  labelCls="{{labelCls}}"

  leadingIcon="{{!loading?'search':'no-icon'}}"
  trailingIcon="{{ value.length > 0  && !loading ? 'close' : '' }}"

  disabled="{{disabled}}"
  focus="{{!loading?focus:''}}"
  controlled="{{controlled}}"
  loading="{{loading}}"
  
  onFocus="onFocus" 
  onBlur="onBlur"
  onTapIconRight="onTapCloseIcon"
  onTapIconLeft="onTapSearchIcon"
  onConfirm="onTapSearchIcon"
  onInput="onInput"  
/>